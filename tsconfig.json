{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "dom.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "types": ["vite/client", "bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@convex/*": ["./convex/*"]
    }
  },
  "include": [
    "src",
    "convex",
    "scripts",
    "vite.config.ts",
    "postcss.config.*",
    "tailwind.config.*",
    "eslint.config.mjs",
    "src/routeTree.gen.ts",
    "src/entry-client.tsx",
    "src/entry-server.tsx",
    "src/router.tsx",
    "src/start.ts"
  ],
  "exclude": ["node_modules", ".next", ".output"]
}
